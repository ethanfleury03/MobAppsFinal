#:kivy 2.0.0

<MainScreen>:
    password_input: password
    confirm_input: confirm
    feedback_label: feedback_label
    FloatLayout:
        # Background Image
        Image:
            source: "pet_background.jpg"  
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        # Sign-up Button
        Button:
            text: "Sign up"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.3, "center_y": 0.3}
            on_press: app.root.current = "second"

        # Sign-in Button
        Button:
            text: "Sign in"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.7, "center_y": 0.3}
            on_press: app.root.current = "second"

        # Welcome Label
        Label:
            text: "Welcome to Pet Finder"
            color: 1, 0.5, 0, 1
            font_size: 60
            font_name: "arialbd.ttf"
            size_hint: None, None
            size: "400dp", "100dp" 
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
        
        #Password match label
        Label:
            id: feedback_label
            text: "Password does not match"
            color: 1, 0, 0, 1
            font_size: 20
            font_name: "arialbd.ttf"
            size_hint: None, None
            pos_hint: {"x": 0.25, "y": 0.34}


        # Text Inputs and Labels
        TextInput:
            hint_text: "Email"
            font_size: 30
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"x": 0.2, "y": 0.65}

        TextInput:
            id: password
            hint_text: "Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

        TextInput:
            id: confirm
            hint_text: "Confirm Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            on_text: root.check_password_match()

<SecondScreen>:
    FloatLayout:
     # Background Image
        Image:
            source: "pet_background.jpg"  
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        


        

        

        
            
        
    
    



