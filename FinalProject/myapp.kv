#:kivy 2.0.0

<SignUpScreen>:
    username_input: username
    password_input: password
    confirm_input: confirm
    feedback_label: feedback_label
    FloatLayout:
        Image:
            source: "pet_background.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        Label:
            text: "Welcome to Pet Finder"
            color: 1, 0.5, 0, 1
            font_size: 60
            font_name: "arialbd.ttf"
            size_hint: None, None
            size: "400dp", "100dp" 
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        TextInput:
            id: username
            hint_text: "Email"
            font_size: 30
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"x": 0.2, "y": 0.65}

        TextInput:
            id: password
            hint_text: "Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

        TextInput:
            id: confirm
            hint_text: "Confirm Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            on_text: root.check_password_match()

        Label:
            id: feedback_label
            text: ""
            color: 1, 0, 0, 1
            font_size: 20
            size_hint: None, None
            pos_hint: {"x": 0.25, "y": 0.34}

        Button:
            text: "Sign up"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.sign_up()

        Label:
            text: "Already have an account?"
            font_size: 20
            color: 0, 0, 0, 1
            size_hint: None, None
            pos_hint: {"center_x": 0.50, "center_y": 0.2}

        Button:
            text: "Sign in"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            on_press: app.root.current = "signin"

<SignInScreen>:
    username_input: username
    password_input: password
    feedback_label: feedback_label
    FloatLayout:
        Image:
            source: "pet_background.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        Label:
            text: "Welcome Back to Pet Finder"
            color: 1, 0.5, 0, 1
            font_size: 60
            font_name: "arialbd.ttf"
            size_hint: None, None
            size: "400dp", "100dp" 
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        TextInput:
            id: username
            hint_text: "Email"
            font_size: 30
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"x": 0.2, "y": 0.65}

        TextInput:
            id: password
            hint_text: "Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

        Label:
            id: feedback_label
            text: ""
            color: 1, 0, 0, 1
            font_size: 20
            size_hint: None, None
            pos_hint: {"x": 0.25, "y": 0.34}

        Button:
            text: "Sign in"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.sign_in()

<PetFinderScreen>:
    radius_input: radius
    FloatLayout:
        # Background Image
        Image:
            source: "all_pets.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        # Welcome Label
        Label:
            text: "Welcome to the Pet Finder Dashboard!"
            font_size: 40
            color: 1, 0.5, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        # Search Button
        Button:
            text: "Search"
            size_hint: 0.15, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_press: root.on_search(search_input.text)
        
        # Dog Label
        Label:
            text: "Dog"
            color: 0, 0, 0, 100
            font_size: 30
            pos_hint: {"center_x": 0.3, "center_y": 0.83}
        
        # Cat Label
        Label:
            text: "Cat"
            color: 0, 0, 0, 100
            font_size: 30
            pos_hint: {"center_x": 0.3, "center_y": 0.78}

        # Male Label
        Label:
            text: "Male"
            color: 0, 0, 0, 100
            font_size: 30
            pos_hint: {"center_x": 0.43, "center_y": 0.83}

        # Female Label
        Label:
            text: "Female"
            color: 0, 0, 0, 100
            font_size: 30
            pos_hint: {"center_x": 0.43, "center_y": 0.78}

        # Dog Button
        ToggleButton:
            group: "group_1"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.33, "y": 0.8}
            font_size: 20

        # Cat Button
        ToggleButton:
            group: "group_1"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.33, "y": 0.75}
            font_size: 20
        
        # Male Button
        ToggleButton:
            group: "group_male"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.48, "y": 0.8}
            font_size: 20

        # Female Button
        ToggleButton:
            group: "group_female"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.48, "y": 0.75}
            font_size: 20

        # Swipeable Cards (Carousel)
        Carousel:
            id: pet_carousel
            direction: 'right'
            size_hint: 0.9, 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
        
        # Dog Breed Drop Down Menu
        Button:
            id: main_button
            text: "Breed"
            size_hint: None, None
            size: 200, 50
            pos_hint: {"x": 0.6, "y": 0.8}
            on_release: dropdown.open(self)

        DropDown:
            id: dropdown
            ScrollView:
                size_hint: 1, None
                height: 200  

                GridLayout:
                    id: options_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

        # Age Range LABEL
        Label:
            text: "Age Range:"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.33, "center_y": 0.7}
        
        # OPTIONAL LABEL
        Label:
            text: "(Optional)"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.33, "center_y": 0.65}

        # 0-2 LABEL
        Label:
            text: "0-2"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.43, "center_y": 0.7}

        # 3-7 LABEL
        Label:
            text: "3-7"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.43, "center_y": 0.65}

        # 8+ LABEL
        Label:
            text: "8+"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.43, "center_y": 0.6}

        # 0-2 Radio Button
        ToggleButton:
            group: "group_age"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.48, "y": 0.68}
            font_size: 20

        # 3-7 Radio Button
        ToggleButton:
            group: "group_age"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.48, "y": 0.63}
            font_size: 20

        # 8+ Radio Button
        ToggleButton:
            group: "group_age"
            size_hint: 0.03, 0.04
            pos_hint: {"x": 0.48, "y": 0.58}
            font_size: 20

        # Radius LABEL
        Label:
            text: "How far are you willing to travel?"
            color: 0, 0, 0, 100
            font_size: 28
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

        
        # Radius Text Input
        TextInput:
            id: radius
            hint_text: "Radius (in miles)"
            font_size: 28
            size_hint: 0.5, None
            height: "40dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.48}



                
        

<PetCard>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.25
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Label:
            text: root.name
            font_size: 24
            size_hint_y: 0.2
            text_size: self.width, None
            halign: 'center'
            shorten: True
            shorten_from: 'right'
        Image:
            source: root.image
            size_hint_y: 0.8

<PetCarousel>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size