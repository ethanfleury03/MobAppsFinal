            font_size: 60
            font_name: "arialbd.ttf"
            size_hint: None, None
            size: "400dp", "100dp" 
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        TextInput:
            id: username
            hint_text: "Email"
            font_size: 30
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"x": 0.2, "y": 0.65}

        TextInput:
            id: password
            hint_text: "Password"
            font_size: 30
            password: True
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

        Label:
            id: feedback_label
            text: ""
            color: 1, 0, 0, 1
            font_size: 20
            size_hint: None, None
            pos_hint: {"x": 0.25, "y": 0.34}

        Button:
            text: "Sign in"
            font_size: 30
            background_color: 1, 0.5, 0, 1
            size_hint: 0.4, None
            height: "60dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.sign_in()

<PetFinderScreen>:
    FloatLayout:
        Image:
            source: "white_background.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        Label:
            text: "Welcome to the Pet Finder Dashboard!"
            font_size: 40
            color: 1, 0.5, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

         # Scrollable Container for Cards
        ScrollView:
            size_hint: 0.9, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            do_scroll_y: False
            do_scroll_x: True
            bar_width: 0

            GridLayout:
                id: card_container
                cols: 1
                size_hint_x: None
                height: self.minimum_height
                width: self.minimum_width
                spacing: dp(10)
                padding: [15, 0]
                # Add multiple cards dynamically if needed

                # Example Card 1
                Card:
                    Label:
                        text: "Adopt a Dog!"
                        font_size: 20
                        color: 0, 0, 0, 1

                # Example Card 2
                Card:
                    Label:
                        text: "Find a Cat!"
                        font_size: 20
                        color: 0, 0, 0, 1

                # Example Card 3
                Card:
                    Label:
                        text: "Small Animals Near You!"
                        font_size: 20
                        color: 0, 0, 0, 1

<Card@BoxLayout>:
    orientation: 'vertical'
    size_hint: None, None
    size: dp(200), dp(200)  # Adjust the card size here
    padding: dp(20)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.25
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        Color:
            rgba: 0.1, 0.1, 0.2, 0.1  # subtle backdrop shadow
